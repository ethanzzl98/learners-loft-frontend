<!--pages/bookings/index.wxml-->
<view style="background-color: rgba(243,126,34,.4); background-image: linear-gradient(135deg, rgba(243,126,34,.4) 65%, rgba(125,18,238,.5) 100%); background-size: cover; height: 100vh; overflow-y: scroll;">
  <view class="header">Bookings</view>
  <view class="card-booking" wx:for="{{bookings}}">
    <image src="#">Subject icon</image>
    <view class="card-booking-info">
      <view class="subject">{{item.lesson.subject}}</view>
      <view class="title">{{item.lesson.title}}</view>
    </view>
  </view>
</view>
