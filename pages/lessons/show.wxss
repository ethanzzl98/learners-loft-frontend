/* pages/lessons/show.wxss */
.header {
  display: flex;
  justify-content: center;
  color: #7E0DF2;
  font-weight: 600;
  font-size: larger;
  font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
  margin-bottom: 10rpx;
}

.card-lesson {
  background: white;
  box-shadow: 0 0 16rpx rgb(1,1,1);
  margin: 0 8rpx;
  border-radius: 10rpx;
  border: 2rpx solid rgb(1,1,1);
  overflow: hidden;
  position: relative;
  margin-bottom: 10rpx;
}

.card-lesson image {
  width: 100%;
  height: 250rpx;
  object-fit: cover;
  border-bottom: 2rpx solid rgb(1,1,1);
}

.card-lesson-info {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  padding: 10rpx;
  border-bottom: 2rpx solid rgb(1,1,1);
}

.subject {
  color: #F27E0D;
  font-size: medium;
  font-weight: 500;
  margin: 0;
  margin-bottom: 8rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.timing {
  color: #F27E0D;
  font-size: medium;
  font-weight: 500;
  margin: 0;
  margin-bottom: 8rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.title {
  color: #F27E0D;
  font-size: medium;
  font-weight: 500;
  margin: 0;
  margin-bottom: 8rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 150rpx;
  object-fit: cover;
  object-position: top;
  position: absolute;
  border: 2rpx solid black;
  right: 10rpx;
  top: 210rpx;
  box-shadow: 0 0 6rpx rgb(1,1,1);
  background-color: gray;
}

.description {
  width: 100%;
  height: 150rpx;
  padding: 10rpx;
  text-align: center;
}

text {
  color: rgb(125,125,125);
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-weight: 100;
  font-size: 36rpx;
}

.buttons {
  display: flex;
  margin: 0 8rpx;
}

.btn-book {
  background-color: #F27E0D;
  color: white;
  border-radius: 50rpx;
  box-shadow: 0 0 10rpx #7E0DF2;
}

.btn-edit {
  background-color: #F27E0D;
  color: white;
  border-radius: 50rpx;
  box-shadow: 0 0 10rpx #7E0DF2;
}