<!--pages/lessons/show.wxml-->
<view style="background-color: rgb(235,235,235); background-size: cover; height: 100vh; overflow-y: scroll;">
  <view class="header">Lesson details</view>
  <view class="card-lesson">
    <image src="#">Autogenerated pic</image>
    <view class="card-lesson-info">
      <view>
        <view class="subject">Subject</view>
        <view class="title">Lesson title</view>
      </view>
      <view class="timing">Timing</view>
      <icon>Lesson icon</icon>
    </view>
    <view class="description">
      <text>Description</text>
    </view>
  </view>
  <view class="buttons">
    <button class="btn-book">Book</button>
    <button class="btn-edit">Edit</button>
  </view>
</view>