<view style="background-color: rgba(243,126,34,.4); background-image: linear-gradient(135deg, rgba(243,126,34,.4) 65%, rgba(125,18,238,.5) 100%); background-size: cover; height: 100vh; overflow-y: scroll;">
  <view class="main">
    <form bindsubmit="save">
      <view class="header">Add Lessons</view>


    <view class="section">
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <input data-name="subject" bindinput="updateData" value="{{lesson.subject}}" class="weui-input" auto-focus placeholder="Subject"/>
        </view>
      </view>
    </view>

    <view class="section">
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <input data-name="title" value="{{lesson.title}}" bindinput="updateData" class="weui-input" auto-focus placeholder="Title"/>
        </view>
      </view>
    </view>

    <view class="section">
      <picker mode="date" value="{{date}}" start="2022-08-01" end="2027-09-01" bindchange="bindStartDateChange">
        <view class="picker">
        Start Date: <text class="section-picker">{{lesson.start_date}}</text>
        </view>
      </picker>
    </view>

  <view class="section">
      <picker mode="time" value="{{time}}" start="01:00" end="23:59" bindchange="bindStartTimeChange">
        <view class="picker">
        Start Time: <text class="section-picker">{{lesson.start_time}}</text>
      </view>
      </picker>

    <picker mode="time" value="{{time}}" start="01:00" end="23:59" bindchange="bindEndTimeChange">
      <view class="picker">
        End Time: <text class="section-picker">{{lesson.end_time}}</text>
      </view>
    </picker>
  </view>

    <view class="section-description">
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <input data-name="description" value="{{lesson.description}}" bindinput="updateData" class="weui-input" auto-focus placeholder="Lesson Description"/>
        </view>
      </view>
    </view>

    <view class="section">
      <input wx:if="{{!lesson.icon}}" class="weui-input" bindtap="chooseIcon" auto-focus placeholder="Choose icon"/>
      <image wx:else bindtap="chooseIcon" src="{{lesson.icon}}"/>
    </view>

    <button class="btn-primary" bindtap="createLesson">Save</button>
    </form>
  </view>
  <choose-icons bind:changeIcon="changeIcon" wx:if="{{showIconPicker}}" />
</view>



