/* pages/lessons/index.wxss */
.main-image {
  background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1531545514256-b1400bc00f31?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8OHx8c3R1ZGVudHN8ZW58MHx8MHx8&auto=format&fit=crop&w=800&q=60');  
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  padding: 20rpx 20rpx;
  height: 360rpx;
}

.company-header {
  font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  letter-spacing: 6rpx;
  font-style: normal;
  font-weight: 400;
  font-size: 100rpx;
  color: #f78d02;
  text-shadow: 2px 4px 2px rgb(5, 5, 5);
}

.flip-card {
  background: transparent;
  height: 250rpx;
  margin: 40rpx 20rpx;
  perspective: 3000rpx;
}

.flip-card-inner {
  position: relative;
  height: 100%;
  width: 100%;
  text-align: center;
  transition: transform 1s;
  transform-style: preserve-3d;
}

.flip-card:hover .flip-card-inner {
  transform: rotateY(180deg);
}

.card-lesson-front, .card-lesson-back {
  position: absolute;
  width: 100%;
  height: 100%;
  backface-visibility: hidden;
}

.card-lesson-front {
  align-items: center;
  background: white;
  border-radius: 25rpx;
  border-top: 15rpx solid rgb(243,126,34);
  box-shadow: 0 5rpx 20rpx gray;
  display: flex;
}

.card-lesson-back {
  align-items: center;
  background: white;
  border-radius: 25rpx;
  border-top: 15rpx solid rgb(125,18,238);
  box-shadow: 0 5rpx 30rpx gray;
  display: flex;
  transform: rotateY(180deg);
}

.lesson-info {
  padding: 50rpx;
}

.pic {
  height: 128rpx;
  width: 128rpx;
  margin-left: 60rpx;
}

.subject {
  color: rgb(80,80,80);
  font-size: 40rpx;
  font-weight: 700;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  margin-left: 40rpx;
  margin-bottom: 10rpx;
}

.title {
  color: rgb(80,80,80);
  font-size: 38rpx;
  font-weight: 500;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  margin-left: 40rpx;
}

.date, .time {
  font-size: 35rpx;
  color: black;
  font-weight: 400;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  margin-bottom: 10rpx;
}

.btn {
  background-color: transparent;
  color: black;
  width: 100rpx;
  height: 55rpx;
  text-align: center;
  font-size: 40rpx;
  border-radius: 25rpx;
  border: 4rpx solid black;
  opacity: 0.7;
  padding: 15rpx 30rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-weight: 400;
  margin-left: 1rpx;
}