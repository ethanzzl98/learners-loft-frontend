/* pages/lessons/index.wxss */
.header {
  display: flex;
  justify-content: center;
  color: #7E0DF2;
  font-weight: 500;
  font-size: larger;
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
  margin-bottom: 10rpx;
}

.card-lesson {
  display: flex;
  align-items: center;
  background: whitesmoke;
  box-shadow: 0 0 16rpx rgb(1,1,1);
  margin-bottom: 16rpx;
  border-radius: 6rpx;
  border: 2rpx solid rgb(1,1,1);
  margin: 0 8rpx;
}

.card-lesson image {
  height: 200rpx;
  margin-right: 16rpx;
}

.card-lesson-info {
  padding: 16rpx;
}

.card-lesson-info text {
  color: rgb(85,98,115);
  font-size: medium;
  font-weight: 500;
  margin: 0;
  margin-bottom: 8rpx;
}