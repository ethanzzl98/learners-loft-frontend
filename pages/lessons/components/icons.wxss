  grid-template-columns: repeat(2, minmax(0, 1fr));
  /* grid-template-columns: 100px 100px; */
  /* grid-template-rows: 80px 80px;  */
  gap: 10px 10px;

  /* grid-template-columns: auto auto; */

}

